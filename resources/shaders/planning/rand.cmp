
// functions

uint generateSeed()
{
    return uint(uSeed * (gl_GlobalInvocationID.x + gl_LocalInvocationID.x + 1));
}


uint iterateSeed(inout uint seed)
{
    seed = (seed ^ 61) ^ (seed >> 16);
    seed *= 9;
    seed = seed ^ (seed >> 4);
    seed *= 0x27d4eb2d;
    seed = seed ^ (seed >> 15);
    return seed;
}


float32_t rand(inout uint seed)
{
    // return 0 <= r < 1
    return (float32_t(iterateSeed(seed)) / 1.00001) * (1.0 / 4294967296.0);
}


float32_t rand(inout uint seed, in float32_t min, in float32_t max)
{
    // return min <= r < max
    return rand(seed) * (max-min) + min;
}
